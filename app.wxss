.topic-item{
  position: relative;
  display: block;
  width: 96%;
  margin:0 auto;
  color: black;
  padding: 8px 12px 6px 12px;
  font-size: 16px;
  text-align: left;
  border-bottom: 1px solid rgba(0, 0, 0, .2);
}
.item-left{
  width: 10%;
  float: left;
  margin: 4px auto;
}
.item-right{
  width: 86%;
  float: right;
  padding: 0 0 4px 0;
  margin-left: 6px;
}
.item-avatar{
  width: 36px;
  height: 36px;
  border-radius: 4px;
}
.item-tag{
  font-size: 12px;
  color:#999;
  text-align: left;
}
.item-author{
  font-size: 12px;
}
.item-title{
  display: block;
  font-size: 14px;
  margin: 4px auto;
  font-weight: 590;
  line-height: 1.3;
}
.replies{
  position: absolute;
  right: 8%;
  bottom: 13%;
  font-size: 12px;
  background: #BDC3C7;
  padding: 1px 4px;
  color: #f2f2f2;
  /*margin-left: 38px;*/
  border-radius: 4px;
}